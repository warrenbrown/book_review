<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
  <h1>There are no books!</h1>
<% else %>
  <% @books.each do |book| %>
    <h3><%= link_to book.title, book %></h3>
    <table id="attributes">
     <tr>
       <th>Book Reviewer: </th>
       <td> <%= book.user.email %></td>
     </tr>
     <tr>
       <th>Created:</th>
       <td><%= time_ago_in_words(book.created_at) %> ago</td>
       <td><%= book.category_id%></td>
     </tr>
  </table>
  <% end %>
<% end %>
