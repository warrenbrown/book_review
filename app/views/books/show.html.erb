<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img, class: 'book-show' %>
  </div>
  <div class="col-md-8">
    <h2><%= @book.title %> </h2>
    <h3><%= @book.author %></h3>
    <p><%= @book.description %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4"
    <!-- where the reviews will go -->
  </div>
</div>
<%=link_to 'Back', root_path %>

<% if user_signed_in? %>
  <% if @book.user_id == current_user.id %>
    <%= link_to 'Edit Book', edit_book_path(@book) %>
    <%= link_to 'Delete Book', book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
  <% end %>
<% end %>
